<Window x:Class="CircleToSearch.Wpf.Views.ScreenOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Select Area"
        AllowsTransparency="True" WindowStyle="None" Background="#33000000"
        WindowState="Maximized" Topmost="True"
        Cursor="Cross"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown" MouseMove="Window_MouseMove" MouseUp="Window_MouseUp">
    <Canvas x:Name="SelectionCanvas">
        <!-- 색상 변경: 선은 흰색, 채우기는 반투명한 흰색으로 변경 -->
        <Polyline x:Name="FreeformPath" 
                  Stroke="White" 
                  StrokeThickness="1.5" 
                  Fill="#19FFFFFF"/>
    </Canvas>
</Window>